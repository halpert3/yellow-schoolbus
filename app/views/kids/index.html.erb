<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Kids</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Grade</th>
        <th>Birthdate</th>
        <th>First Parent</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @kids.each do |kid| %>
      <tr>
        <td><%= kid.name %></td>
        <td><%= kid.grade %></td>
        <td><%= kid.birthdate.strftime("%B %-d, %Y") %></td>
        <td><%= kid.parent_id %></td>
        <td><%= link_to 'Show', kid %></td>
        <td><%= link_to 'Edit', edit_kid_path(kid) %></td>
        <td><%= link_to 'Destroy', kid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add a Child', new_kid_path, class: "btn btn-medium btn-success" %>
</div> <!-- container -->

